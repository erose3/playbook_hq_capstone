<div>
  <div>
    <h3>
      Edit task
    </h3>

<br>
    <form action="/modify_task/<%= @the_task.id %>"  method="post" >
      <div>
        <input type="hidden" id="contract_id_box" name="query_contract_id" value="<%= @the_task.contract_id %>">
      </div>

      <div>
        <label for="task_name_box">
          Task name
        </label>

        <input class="col-sm-3" type="text" id="task_name_box" name="query_task_name" value="<%= @the_task.task_name %>">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea class="col-sm-5" id="description_box" name="query_description"><%= @the_task.description %></textarea>
      </div>

      <div>
        <input type="hidden" id="created_by_box" name="query_created_by" value="<%= @the_task.created_by %>">
      </div>

      <div>
        <label for="deadline_box">
          Deadline
        </label>

        <input type="date" id="deadline_box" name="query_deadline" value="<%= @the_task.deadline %>">
      </div>

      <div>
        <label for="completion_status_box">
            Completed?
        </label>
        <input type="checkbox" id="completion_status_box" name="query_completion_status" value="1" <%= "checked" if @the_task.completion_status %>>
      </div>

      <div>
        <label for="completed_on_box">
          Completed on
        </label>

        <input type="date" id="completed_on_box" name="query_completed_on" value="<%= @the_task.completed_on %>">
      </div>

      <div>
      <label for="assigned_to_box">Assigned To</label>
      <select
        id="assigned_to_box"
        name="query_assigned_to"
      >
        <option
          value="<%= @brand_user.id %>"
          <%= "selected" if @the_task.assigned_to == @brand_user.id %>
        >
          <%= "#{@brand_user.first_name} #{@brand_user.last_name} (Brand)" %>
        </option>

        <option
          value="<%= @athlete_user.id %>"
          <%= "selected" if @the_task.assigned_to == @athlete_user.id %>
        >
          <%= "#{@athlete_user.first_name} #{@athlete_user.last_name} (Athlete)" %>
        </option>
      </select>
    </div>

<br>
      <button>
        Update task
      </button>
    </form>
  </div>
</div>

